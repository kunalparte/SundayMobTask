<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Users.view.AddUserActivity">

    <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/userNameEditTextLayout"
                                                   android:layout_margin="16dp"
                                                   android:gravity="center"
                                                   android:background="@drawable/edit_text_background"
                                                   android:textColorHint="@color/colorPrimary">

    <android.support.design.widget.TextInputEditText android:layout_width="match_parent"
              android:layout_height="40dp"
              android:id="@+id/userNameEditText"
    android:textSize="18sp"
    android:textColor="#000"
    android:gravity="center_vertical"
    android:hint="ENter User Name"
    android:background="@android:color/transparent"
    android:padding="16dp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/userTypeEditTextLayout"
                                                   android:layout_margin="16dp"
                                                   android:gravity="center"
                                                   android:layout_below="@+id/userNameEditTextLayout"
                                                   android:background="@drawable/edit_text_background"
                                                   android:textColorHint="@color/colorPrimary">

    <android.support.design.widget.TextInputEditText
              android:layout_width="match_parent"
              android:layout_height="49dp"
              android:id="@+id/userTypeEditText"
              android:textSize="18sp"
              android:textColor="#000"
              android:hint="ENter User Type"
              android:background="@android:color/transparent"
              android:padding="16dp"
    android:textColorHint="@color/colorPrimary"/>
    </android.support.design.widget.TextInputLayout>

    <ImageView android:layout_width="match_parent"
               android:layout_height="300dp"
               android:layout_margin="16dp"
               android:id="@+id/addUserImageView"
               android:src="@drawable/ic_image_black_24dp"
               android:background="@color/colorPrimary"
               android:layout_below="@+id/userTypeEditTextLayout"
               android:scaleType="fitXY"
    android:scaleY="1"/>

    <Button android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/addButton"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:text="ADD"
            android:background="@drawable/button_background"
            android:layout_margin="16dp"
            android:textColor="#fff"/>
</RelativeLayout>